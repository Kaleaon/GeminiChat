<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AiStudioApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:colorBackground">@color/marble_surface_light</item>
        <item name="colorPrimary">@color/metallic_gold</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/metallic_silver</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="colorSurface">@color/marble_surface_light</item>
        <item name="colorSurfaceVariant">@color/marble_vein_light</item>
        <item name="colorOutline">@color/metallic_silver_deep</item>
        <item name="marbleBackground">@drawable/bg_marble_light</item>
        <item name="marbleTexture">@drawable/bg_marble_light</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Metallic</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Metallic</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Metallic</item>
        <item name="postSplashScreenTheme">@style/Theme.AiStudioApp</item>
    </style>

    <style name="ShapeAppearance.Metallic" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="ShapeAppearance.MetallicFab" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">50%</item>
    </style>
</resources>
